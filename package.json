{
  "version": "1.0.0-pre",
  "description": "Philip's Single Page App template",
  "homepage": "https://github.com/philipmw/spa-template",
  "license": "MIT",
  "dependencies": {
    "react": "16.7.0",
    "react-dom": "16.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philipmw/spa-template"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/react": "~16",
    "@types/react-dom": "latest",
    "enzyme": "latest",
    "enzyme-adapter-react-16": "latest",
    "jest": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "tslint": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest"
  },
  "scripts": {
    "build": "webpack --display-error-details && npm run lint",
    "lint": "tslint -t verbose --project tsconfig.json --config tslint-src.json --exclude '**/*.test.tsx'",
    "start": "webpack-dev-server --open",
    "test": "tslint -t verbose --project tsconfig.json --config tslint-test.json '**/*.test.tsx' && jest"
  }
}
